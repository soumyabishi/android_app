<?xml version='1.0' encoding='utf-8'?>
<widget id="com.soumyabishi.lamour" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>L'amour</name>
    <description>
        Brand new cordova project!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <allow-intent href="market:*" />
    <splash density="port-hdpi" src="src/assets/images/320x480.png" />
    <splash density="port-ldpi" src="src/assets/images/200x320.png" />
    <splash density="port-mdpi" src="src/assets/images/320x480.png" />
    <splash density="port-xhdpi" src="src/assets/images/720x1280.png" />
    <splash density="port-xxhdpi" src="src/assets/images/960x1600.png" />
    <splash density="port-xxxhdpi" src="src/assets/images/1280x1920.png" />
    <icon density="mdpi" src="src/assets/icons/icon@MDPI.png" />
    <icon density="ldpi" src="src/assets/icons/icon@HDPI.png" />
    <icon density="hdpi" src="src/assets/icons/icon@HDPI.png" />
    <icon density="xxhdpi" src="src/assets/icons/icon@XXXHDPI.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="ShowSplashScreen" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenBackgroundColor" value="#22232D" />
</widget>
